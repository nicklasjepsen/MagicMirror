    <!--Date and time Grid-->
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-80">
                <TextBlock Name="ClockHoursLabel" TextAlignment="Right" Text="06" Style="{StaticResource GigaTextStyle}"/>
                <TextBlock Name="ClockSeperatorLabel" Width="70" Margin="0,-30,0,0"  TextAlignment="Center" Text=":" Style="{StaticResource GigaTextStyle}"/>
                <TextBlock Name="ClockMinutesLabel" TextAlignment="Right" Text="50" Style="{StaticResource GigaTextStyle}"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Grid.Row="2" Name="DayTxt" TextAlignment="Center" Style="{StaticResource LargeTextStyle}" Text="Monday 9. January 2016" />

    </Grid>
