<Page
    x:Class="SystemOut.MagicPiMirror.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemOut.MagicPiMirror"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>
    <Grid Background="Black">
        <Grid Background="Black" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Name="TemperatureTxb" FontSize="90" VerticalAlignment="Top" Margin="0,0,20,0">?°</TextBlock>
                <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="0,27,0,0">
                    <TextBlock Name="WeatherDescirptionTxb" FontSize="30" Text="Unknown" />
                    <TextBlock Name="LocationTxb" FontSize="20" Text="Loading..."/>
                </StackPanel>
            </Grid>



            <TextBlock Grid.Column="2" Grid.Row="0" Name="ClockLabel" TextAlignment="Right" Text="06:50" Foreground="White" FontSize="50"/>

            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
                <TextBlock Name="SpecialNote" TextAlignment="Center" Text="SpecialNote" FontSize="60"/>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                <TextBlock Name="ListNoteHeading" FontSize="50" Text="ListNoteHeadning" />
                <TextBlock Name="ListNoteContent" FontSize="20" Text="ListNoteContent"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
